pipeline {
    agent any
   
    stages {

      stage('clean')
            {
                steps
                 { 
                    sh 'mvn clean package'
                 }
            }
        stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('sonarqube') {
                sh 'mvn clean package sonar:sonar'
              }
            } 
        }
       stage('deploy'){
        steps{
            
            curl -s --upload-file target/java-tomcat-maven-example.war	 "http://tomcat:phoenix@13.233.106.132:8090/manager/text/deploy?path=/html&update=true&tag=${BUILD_TAG}"
        
        }
       
       }
}
}
